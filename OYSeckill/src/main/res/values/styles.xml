<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">

    </style>

    <style name="AppTheme.Fullscreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="TextStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/black_4F4F4F</item>
    </style>

    <style name="TextStyle.HomeTabItem" parent="TextStyle">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextStyle.Large" parent="TextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextStyle.Middle" parent="TextStyle">
        <item name="android:textColor">@color/black_828282</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextStyle.Small" parent="TextStyle">
        <item name="android:textColor">@color/gray_919191</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextStyle.Tiny" parent="TextStyle">
        <item name="android:textColor">@color/gray_A9A9A9</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="ProgressBarStyleHorizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_web_layout_list</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:maxHeight">3dp</item>
        <item name="android:minHeight">3dp</item>
    </style>

    <style name="ProgressBarStyleCircle">
        <item name="android:indeterminateDrawable">@drawable/progress_indeterminate_drawable_small
        </item>
        <item name="android:indeterminateDuration">1000</item>
        <item name="android:maxHeight">30dp</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:maxWidth">30dp</item>
        <item name="android:minWidth">30dp</item>
    </style>

    <style name="ProgressBarStyleSeckill">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_seckill_drawable</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:maxHeight">6dp</item>
        <item name="android:minHeight">6dp</item>
    </style>

    <style name="LoadingDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!-- 边框 -->
        <item name="android:windowIsFloating">true</item><!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item><!-- 半透明 -->
        <item name="android:windowNoTitle">true</item><!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/LoadingDialogAnimStyle</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="LoadingDialogAnimStyle" parent="@android:style/Animation.Dialog">
        <!--
        <item name="android:windowEnterAnimation">@anim/rotate_loader_animation_in</item>
        -->
        <item name="android:windowExitAnimation">@anim/rotate_loader_animation_out</item>
    </style>

    <!-- Prompter Theme -->
    <style name="Prompter" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!-- 边框 -->
        <item name="android:windowIsFloating">true</item><!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item><!-- 半透明 -->
        <item name="android:windowNoTitle">true</item><!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item> <!-- default true -->
        <item name="android:windowAnimationStyle">@style/PrompterAnimation</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <!-- Prompter Animation -->
    <style name="PrompterAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/prompter_animation_in</item>
        <item name="android:windowExitAnimation">@anim/prompter_animation_out</item>
    </style>

</resources>
