<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Titlebar">
        <attr name="bar_title" format="reference|string" />
        <attr name="title_src" format="reference" />
        <attr name="go_back" format="reference" />
        <attr name="go_back_display" format="reference|boolean" />
        <attr name="left_action" format="reference|string" />
        <attr name="right_action" format="reference|string" />
        <attr name="first_right_image_action" format="reference" />
        <attr name="second_right_image_action" format="reference" />
        <attr name="bar_background" format="reference|color" />
        <attr name="divider_color" format="reference|color" />
        <attr name="title_color" format="reference|color" />
        <attr name="left_action_color" format="reference|color" />
        <attr name="right_action_color" format="reference|color" />
    </declare-styleable>

    <declare-styleable name="Switcher">
        <attr name="checked" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension|reference" />
        <attr name="border_color" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="RectImageView">
        <attr name="widthToHeight" format="float" />
    </declare-styleable>

    <declare-styleable name="ViewPagerIndicator">
        <!-- Style of the circle indicator. -->
        <attr name="vpiCirclePageIndicatorStyle" format="reference" />
        <!-- Style of the underline indicator. -->
        <attr name="vpiUnderlinePageIndicatorStyle" format="reference" />
        <!-- Style of the line indicator. -->
        <attr name="vpiLinePageIndicatorStyle" format="reference" />
        <!-- Style of the tab indicator's tabs. -->
        <attr name="vpiTabPageIndicatorStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="CirclePageIndicator">
        <!-- Whether or not the indicators should be centered. -->
        <attr name="centered" format="boolean" />
        <!-- Color of the filled circle that represents the current page. -->
        <attr name="fillColor" format="color" />
        <!-- Color of the filled circles that represents pages. -->
        <attr name="pageColor" format="color" />
        <!-- Orientation of the indicator. -->
        <attr name="android:orientation" />
        <!-- Radius of the circles. This is also the spacing between circles. -->
        <attr name="radiuss" format="dimension" />
        <!-- Whether or not the selected indicator snaps to the circles. -->
        <attr name="snap" format="boolean" />
        <!-- Color of the open circles. -->
        <attr name="strokeColor" format="color" />
        <!-- Width of the stroke used to draw the circles. -->
        <attr name="strokeWidth" format="dimension" />
        <!-- View background -->
        <attr name="android:background" />
    </declare-styleable>

    <declare-styleable name="WatermarkImageView">
        <attr name="watermark" format="reference" />
    </declare-styleable>
</resources>