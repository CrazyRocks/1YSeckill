<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="0dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
            <padding android:bottom="3dp" android:left="10dp" android:right="10dp" android:top="3dp" />
            <solid android:color="@color/gray_A9A9A9" />
            <stroke android:width="0px" android:color="@color/transparent" />
        </shape>
    </item>

    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="0dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
            <padding android:bottom="3dp" android:left="10dp" android:right="10dp" android:top="3dp" />
            <solid android:color="@color/gray_F5F5F5" />
            <stroke android:width="0px" android:color="@color/transparent" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="0dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
            <padding android:bottom="3dp" android:left="10dp" android:right="10dp" android:top="3dp" />
            <solid android:color="@color/white" />
            <stroke android:width="0px" android:color="@color/transparent" />
        </shape>
    </item>

</selector>